<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.ColorAdjust?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPane" prefHeight="1080.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.fiuba.algo3.controllers.ControladorDeIngresarNombre">
    <ImageView fitHeight="1080.0" fitWidth="1920.0">
        <effect>
            <ColorAdjust brightness="0.21" hue="0.02"/>
        </effect>
        <Image url="@../images/Background.jpg"/>
    </ImageView>
    <Pane layoutX="613.0" layoutY="490.0" prefHeight="90.0" prefWidth="695.0"
          style="-fx-background-color: rgb(255, 206, 91)rgb(255, 206, 91); -fx-background-radius: 10;">
        <TextField fx:id="nombre" layoutX="200.0" layoutY="15.0" prefHeight="60.0" prefWidth="484.0"
                   style="-fx-background-radius: 10;">
            <font>
                <Font size="15.0"/>
            </font>
        </TextField>
        <Label id="nombreLabel" layoutX="14.0" layoutY="14.0" prefHeight="60.0" prefWidth="186.0"
               text="Ingrese el nombre:" textFill="WHITE">
            <font>
                <Font name="System Bold" size="20.0"/>
            </font>
        </Label>
    </Pane>
</AnchorPane>
